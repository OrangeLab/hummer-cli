{
  "compilerOptions": {
    "sourceMap": true,
    "listFiles": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["node", "jest"],
    "target": "es2017",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
